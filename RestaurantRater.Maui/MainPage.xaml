<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantRater.Maui.MainPage"
             Title="Restaurant Rater">

    <ContentPage.Content>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Header -->
            <Label Text="Restaurant Rater"
                   FontSize="32"
                   HorizontalOptions="Center" />

            <!-- Refresh Button -->
            <Button Text="Refresh Restaurants"
                    Command="{Binding RefreshCommand}" />

            <!-- CollectionView to display restaurants -->
            <CollectionView x:Name="RestaurantsList"
                            ItemsSource="{Binding Restaurants}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="Gray" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontSize="20" />
                                <Label Text="{Binding Location}" FontSize="14" />
                                <Label Text="Average Score: {Binding AverageScore}" FontSize="14" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>
